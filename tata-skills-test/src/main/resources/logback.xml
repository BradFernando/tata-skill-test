<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %cyan(%d{yyyy-MM-dd HH:mm:ss.SSS}) %highlight(%-5level) %magenta([%thread]) %green(%logger{36}) : %msg%n
            </pattern>
        </encoder>
    </appender>
    <appender name="BANNER" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                ${BANNER_FILE}
            </pattern>
        </encoder>
    </appender>
    <logger name="banner" level="INFO" additivity="false">
        <appender-ref ref="BANNER"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>